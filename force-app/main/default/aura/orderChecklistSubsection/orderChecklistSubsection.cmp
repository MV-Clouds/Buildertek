<aura:component controller="OrderChecklistController"
    implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction"
    access="global">

    <aura:attribute name="checkListId" type="string" default="" />
    <aura:attribute name="globalListWithSectionSubsection" type="List" default="[]" />
    <aura:attribute name="tempList" type="List" default="['a32Kk000000blLoIAI','a32Kk000000blMTIAY']" />
    <aura:registerEvent name="childOrderSubsectionComponentEvent" type="c:compEvent" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <aura:handler name="multiSelectLookUpEvent" event="c:multiSelectLookUpCompEvent"
        action="{!c.handleMultiSelectLookUpComponentEvent}" />

    <div class="slds-m-around_xx-large">
        <!-- Modal/Popup Box starts here-->
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true"
            aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <!-- Modal/Popup Box Header Starts here-->
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close" onclick="{! c.closeModel }" alternativeText="close"
                        variant="bare-inverse" class="slds-modal__close" />
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Select Order</h2>
                </header>
                <!--Modal/Popup Box Body Starts here-->
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <aura:iteration items="{!v.globalListWithSectionSubsection}" var="item">
                        <div class="setUpRows">
                            <div class="titleForSection">
                                <span>{!item.sectionName}</span>
                            </div>
                            <div class="cmp-section-style">
                                <c:MultiSelectLookup objectName="buildertek__Checklist_Questions__c"
                                    containerForExtraId1="{!v.checkListId}" containerForExtraId2="{!item.sectionId}" fieldName="buildertek__Questions__r.buildertek__Sub_Section__r.Name"
                                    selectedRecords="{!v.tempList}" iconName="standard:section" placeholder="Select Subsection" />
                                    <!--! selectedRecords="{!v.tempList}" pass the selected records to the component -->
                            </div>
                        </div>
                    </aura:iteration>
                </div>
                <!--Modal/Popup Box Footer Starts here-->
                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral" label="Cancel" title="Cancel" onclick="{! c.closeModel }" />
                    <lightning:button variant="brand" label="Save" title="Save" onclick="{!c.submitDetails}" />
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </div>
</aura:component>